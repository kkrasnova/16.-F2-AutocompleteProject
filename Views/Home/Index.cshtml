@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <h2 class="mb-4">Autocomplete Demo</h2>
    <div class="form-group">
        <label for="searchInput" class="form-label">Пошук:</label>
        <div class="input-group">
            <input type="text" 
                   id="searchInput" 
                   class="form-control" 
                   placeholder="Введіть щонайменше 3 символи..." 
                   aria-describedby="searchHelp" />
            <input type="hidden" id="selectedId" name="selectedId" />
        </div>
        <div id="searchHelp" class="form-text text-muted">
            Введіть мінімум 3 символи для початку пошуку
        </div>
    </div>
    <div class="mt-3">
        <p>Вибраний ID: <span id="selectedItemId" class="badge bg-primary"></span></p>
    </div>
</div>